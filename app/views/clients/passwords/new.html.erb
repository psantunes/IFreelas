<div class="container">
  <div class="row m-5">
    <div class="col-12 text-center p-3">
      <h2><%= t('messages.forgot_password', model: @client.model_name.human) %></h2>
    </div>

    <div class="col-12 offset-md-3 col-md-6">


      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "clients/shared/error_messages", resource: resource %>

        <div class="field py-2  ">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="actions py-2 text-center">
          <%= f.submit t('messages.password_instructions_message'), class: "btn my-btn px-5 py-3 my-3" %>
        </div>
      <% end %>

      <%= render "clients/shared/links" %>

    </div>
  </div>
</div>
